#include <iostream>
using namespace std;

// Define the structure
struct Item {
    int id;
    float cost;
};

int main() {
    // Declare an array of 6 Item structures
    Item items[6];

    // Initialize the first four elements with sample data
    items[0] = {101, 45.50};
    items[1] = {102, 75.25};
    items[2] = {103, 60.00};
    items[3] = {104, 30.75};

    // Initialize remaining two items with default values
    items[4] = {0, 0.0};
    items[5] = {0, 0.0};

    cout << "Items with cost greater than 50.00:\n";

    // Use a for loop to iterate through all items
    for (int i = 0; i < 6; i++) {
        if (items[i].cost > 50.00) {
            cout << "Item ID: " << items[i].id
                 << ", Cost: " << items[i].cost << endl;
        }
    }

    return 0;
}
